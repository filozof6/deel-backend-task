{
  "env": {
    "node": true,
    "commonjs": true,
    "es2020": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "extends": ["airbnb-base", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "no-console": "off",
    "no-inline-comments": "off",
    "func-names": "off",
    "no-underscore-dangle": "off",
    "no-use-before-define": "off",
    "consistent-return": "off",
    "global-require": "off"
  }
}
