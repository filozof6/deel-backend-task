{
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/*.DS_Store": true,
    "node_modules/": true
  },
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
